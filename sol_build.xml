<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." name="sol_build">
    <description>
        Script for Assignment 3a-b
    </description>

    <import file="build.xml"/>

    <property name="lab3.location" location="."/>
    <property name="schema.dir" location="${lab3.location}/xsd"/>
    <property name="path.prefix" value="it/polito/dp2/NFFG/sol3"/>

    <path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- my init -->
    <target name="sol-init">
        <mkdir dir="src/it/polito/dp2/NFFG/sol3/models"/>
    </target>

    <!-- all necessary operations to build the web-server service (part 1) -->
    <target name="build-service">

        <!-- Create annotated classes from xsd schema: -->
        <echo message="Generating annotated classes from the xsd schema..."/>
        <exec executable="xjc" failonerror="true">
            <arg value="-d"/>
            <arg value="${src.dir}"/>
            <arg value="-p"/>
            <arg value="it.polito.dp2.NFFG.sol3.models"/>
            <arg value="${schema.dir}/nffgVerifier.xsd"/>
        </exec>
        <echo message="Done!"/>

        <!-- Build classes from java file -->
        <echo message="Building java classes from java code..."/>
        <javac debug="on"
               fork="true"
               destdir="${build.dir}"
               srcdir="${src.dir}"
               includeantruntime="false"
               source="${source}"
               target="${target}">
            <include name="${path.prefix}/**/*.java"/>
            <classpath>
                <path refid="classpath"/>
            </classpath>
        </javac>
        <echo message="Done!"/>

    </target>

    <!-- all necessary operations to build the client (part 2) -->
    <target name="build-client">
        <!-- TODO -->
    </target>

    <!-- my clean -->
    <target name="sol-clean">
        <delete dir="src/it/polito/dp2/NFFG/sol3/models"/>
    </target>

</project>